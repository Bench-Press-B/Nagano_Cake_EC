<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
  		<h2>商品新規登録</h2>
  		<div class="mx-auto">
  		  <%= form_with model:@item, url:admin_items_path, local:true do |f| %>
  		    <div class="form-group">
  		      <%= f.label :"商品画像" %>
  		      <%= f.file_field :image, class: "form-control-file", accept: 'image/*' %>
  		    </div>
  		    <div class="form-group">
  		      <%= f.label :"商品名" %>
  		      <%= f.text_field :name, class: "form-control" %>
  		    </div>
  		    <div class="form-group">
  		      <%= f.label :"商品説明" %>
  		      <%= f.text_field :explanation, class: "form-control" %>
  		    </div>
  		    <div class="form-group">
  		      <%= f.label :"ジャンル" %>
  		      <%= f.collection_select :genre_id, @genres, :id, :name, {include_blank: "---"} %>
  		    </div>
  		    <div class="form-group">
  		      <%= f.label :"税抜価格" %>
  		      <%= f.number_field :non_taxed_price, class: "form-control" %>
  		    </div>
  		    <div class="form-group">
  		      <%= f.label :"販売ステータス" %>
  		      <div>
              <%= f.radio_button :is_active, true %>
              <%= f.label :"販売中" %>
            </div>
            <div>
              <%= f.radio_button :is_active, false %>
              <%= f.label :"販売停止中" %>
            </div>
  		    </div>
  		    <div class="form-group">
  		      <%= f.submit  "新規登録", class: "btn btn-secondary" %>
  		    </div>

  		  <% end %>

  		  <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>
  		    <%= f.text_field :name %>
  		    <%= f.submit %>
  		  <% end %>
  		</div>
  </div>
</div>

