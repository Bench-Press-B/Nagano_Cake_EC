<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
  		<h2>商品新規登録</h2>
  		<div class="mx-auto">
  		  <%= form_with model:@item, url: '', local:true do |f| %>
  		    <div class="form-group">
  		      <%= f.label :image %>
  		      <%= f.file_field :image, class: "form-control-file", accept: "image/*" %>
  		    </div>
  		    <div class="form-group">
  		      <%= f.label :name %>
  		      <%= f.text_field :name, class: "form-control" %>
  		    </div>
  		    <div class="form-group">
  		      <%= f.label :explanation %>
  		      <%= f.text_field :explanation, class: "form-control" %>
  		    </div>
  		    <div class="form-group">
  		      <%= f.label :genre %>
  		      <%= form.collection_select :genre_id, @genres, :id, :name, {include_blank: "---"} %>
  		    </div>
  		    <div class="form-group">
  		      <%= f.label :non_taxed_price %>
  		      <%= number_field %>
  		    </div>
  		    <div class="form-group">
  		      <div>
  		        <%= f.label :is_active, value: true %>
              <%= f.radio_button :"販売中", true %>
            </div>
            <div>
              <%= f.label :is_active, value: false %>
              <%= f.radio_button :"販売停止中", false %>
            </div>
  		    </div>
  		    <div class="form-group">
  		      <%= f.submit  "新規登録", class: "btn btn-secondary" %>
  		    </div>

  		  <% end %>
  		</div>
  </div>
</div>