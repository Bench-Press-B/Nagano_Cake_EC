<div class="container">
  <h2 class="mb-4">ジャンル編集</h2>
  <div class="row">

    <%= form_with model: @genre, url: admin_genre_path do |f| %>
    <%= render 'layouts/errors', obj: f.object %>

    <div class="form-group">
      <%= f.label :genre, "ジャンル名", class: 'mr-4' %>
      <%= f.text_field :name, autofocus: true, required: true, class: 'mr-3' %>

      <%= f.submit '変更を保存', class: 'btn btn-success' %>
    </div>

    <% end %>
  </div>
</div>
