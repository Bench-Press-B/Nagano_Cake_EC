<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
<%= render 'layouts/errors', obj: f.object %>

<div class="form-group">
  <%= f.label :genre, "ジャンル名" %>
  <%= f.text_field :genre, class: 'form-control' %>
</div>

<%= f.submit '新規登録', class: 'btn btn-success' %>

<% end %>


<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to '編集する', edit_admin_genre_path, class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>