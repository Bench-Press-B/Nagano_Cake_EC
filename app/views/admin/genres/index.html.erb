<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2 class="mb-5">ジャンル一覧・追加</h2>

      <%= form_with model: @genre, url: admin_genres_path do |f| %>

      <div class="form-group">
        <%= f.label :genre, "ジャンル名", class: 'mr-5 font-weight-bold' %>
        <%= f.text_field :name, autofocus: true, required: true, class: 'mr-5' %>

        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>

      <% end %>


      <table class='table table-hover table-inverse'>
        <thead class="bg-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
    </div>
  </div>
</div>

