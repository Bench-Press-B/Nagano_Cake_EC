<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
    <div class="form-inline">
      <h2>商品一覧</h2>
      <%= link_to new_admins_item_path do %>
        <i class="fa-thin fa-circle-plus"></i>
        <%#　①アイコンが表示されない　②右寄せできない　%>
      <% end %>
      
    </div>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= items.ID %></td>
            <td>
              <%= link_to admins_item(item) do %>
                <%= items.name %>
              <% end %>
            </td>
            <td><%= items.non_taxed_price %></td>
            <td>
                <%= items.genre.name %>
            </td>
            <td>
              ステータス
            </td>
          </tr>
        <% end %>
        <%= paginate @items %>
      </tbody>
    </table>
  </div>
</div>

