<div class='container'>
  <h2>商品詳細</h2>
  <div class='row mt-5'>
    <div class="col-md-5">
      <%= image_tag @item.get_image, size: "400x300" %>
    </div>
    <div class="col-md-4">
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.explanation %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td>
            <%= (@item.non_taxed_price * 1.1).floor.to_s(:delimited) %>
            (<%= @item.non_taxed_price.to_s(:delimited) %>)円
          </td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active? %>
              <%= link_to '販売中', admin_item_path(@item, item: {is_active: false}), method: :patch %>
            <% else %>
              <%= link_to '販売停止中', admin_item_path(@item, item: {is_active: true}), method: :patch %>
            <% end %>
          </td>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success px-4" %>
      </div>
    </div>
  </div>
</div>

