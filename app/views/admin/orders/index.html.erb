<% provide(:title, "注文履歴一覧") %>
<div class='container'>
<h2>注文履歴一覧</h2>
	<div class="row">
	    <table class="table table-hover table-bordered table-condensed">
	      <thead>
	        <tr class="info">
	        <th class="col-xs-3">購入日時</th>
	        <th>購入者</th>
	        <th class="col-xs-1">注文個数</th>
	        <th class="col-xs-2">注文ステータス</th>
	        </tr>
	      </thead>
	      <tbody>
	        <% @orders.each do |order| %>
	          <tr>
			        <td>
			          <%= link_to admin_order_path(order)  do %>
			            <%= order.created_at.strftime('%Y/%m/%d %H:%M')  %>
			          <% end %>
			        </td>
			        <td class="text-left">
			          <%= full_name(order.customer) %>
			        </td>
			        <td class="text-right">
			          <%= order.order_details.count %>
			        </td>
	    	        <td>
	    	          <%= order.status %>
	     	        </td>
	     	      </tr>
			    <% end %>
			  </tbody>
			</table>
    <div class="mx-auto">
      <%= paginate @orders %>
    </div>
  </div>
</div>