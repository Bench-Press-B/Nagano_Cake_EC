<div class='container'>
  <div class='row'>
    <div class="col-md-12 px-5 px-sm-0">
      <div class="form-inline mt-2 mb-3">
        <h2 class="col-2 bg-light text-center">マイページ</h2><br>
      </div>
      <table>
        <tr>
          <td><h2 class="mt-3 mr-5">登録情報</h2></td>
          <td><%= link_to "編集する",edit_customer_path, class: "btn btn-success mt-3 mb-2" %></td>
        </tr>
      </table>


    <table class ="table table-bordered">
      <tr>
        <td class="bg-light">氏名</td><td><%= @customer.first_name %> <%= @customer.last_name %></td>
      </tr>
      <tr>
        <td class="bg-light">カナ</td><td><%= @customer.kana_first_name %> <%= @customer.kana_last_name %></td>
      </tr>
      <tr>
        <td class="bg-light">郵便番号</td><td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td class="bg-light">住所</td><td><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="bg-light">電話番号</td><td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td class="bg-light">メールアドレス</td><td><%= @customer.email %></td>
      </tr>
    </table>


    <table>
      <tr>
        <td><h2 class="mt-3 mr-5">配送先</h2></td><td><%= link_to "一覧を見る",shipping_addresses_path,class: "btn btn-primary mt-3 mb-2" %></td>
      </tr>
      <tr>
        <td><h2 class="mt-3 mr-5">注文履歴</h2></td><td><%= link_to "一覧を見る",orders_path,class: "btn btn-primary mt-3 mb-2" %></td>
      </tr>
    </table>


  </div>
 </div>
</div>