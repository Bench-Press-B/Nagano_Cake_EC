<div class="container">
  <div class="row">
   <h2>会員情報編集</h2>
    <%= form_with model: @customer, method: :patch do |f| %>
    <table>
     <tr>
       <td>氏名</td>
       <td><%= f.text_field :first_name, class: "form-control" %></td>
       <td><%= f.text_field :last_name, class: "form-control" %></td>
     </tr>
     <tr>
       <td>フリガナ</td>
       <td><%= f.text_field :kana_first_name, class: "form-control" %></td>
       <td><%= f.text_field :kana_last_name, class: "form-control" %></td>
     </tr>
     <tr>
       <td>郵便番号</td>
       <td><%= f.text_field :postal_code, class: "form-control" %></td>
     </tr>
     <tr>
       <td>住所</td>
       <td><%= f.text_field :address, class: "form-control" %></td>
     </tr>
     <tr>
       <td>電話番号</td>
       <td><%= f.text_field :phone_number, class: "form-control" %></td>
     </tr>
     <tr>
       <td>メールアドレス</td>
       <td><%= f.text_field :email, class: "form-control" %></td>
     </tr>
     <tr>
      <td></td>
      <td><%= f.submit"変更内容を保存", class: 'btn btn-success' %></td>
      <% end %>
      <td><%= link_to "退会する", unsubscribe_customers_path, class: "btn btn-danger" %></td>
     </tr>
    </table>

  </div>
</div>