<%= form_with model: address, local:true do |f| %>
 <table class="table table-borderless">
   <tr>
    <td><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></td>
    <td><%= f.text_field :postal_code, required: true, class: 'form-control col-sm-6' %></td>
   </tr>
   <tr>
     <td><%= f.label :address,"住所" %></td>
     <td><%= f.text_field :address, required: true, class: 'form-control' %></td>
   </tr>
   <tr>
     <td><%= f.label :name,"宛名" %></td>
     <td><%= f.text_field :name, required: true, class: 'form-control col-sm-6' %></td>
     <td><%= f.submit"新規登録" , required: true,class: 'btn btn-success' %></td>
   </tr>
 </table>
<% end %>
