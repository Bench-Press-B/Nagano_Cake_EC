<div class="container">
    <h3 class="col-2 bg-light text-center">配送先編集</h3>
  <div class="row">
     
    <div class ="col-sm-12 mr-5">
    <%= form_with model: @address, method: :patch do |f| %>
    <table class="table table-borderless">
     <tr>
       <th class ="col-sm-3"><%= f.label :"郵便番号(ハイフンなし)" %></th>
       <td><%= f.text_field :postal_code,required: true, class: "form-control col-sm-6" %></td>
     </tr>
     <tr>
       <th class ="col-sm-3"><%= f.label :"住所" %></th>
       <td><%= f.text_field :address, required: true, class: "form-control" %></td>
     </tr>
     <tr>
       <th class ="col-sm-3"><%= f.label :"宛名" %></th>
       <td><%= f.text_field :name, required: true, class: "form-control col-sm-6" %></td>
       <td><%= f.submit"変更内容を保存", class: 'btn btn-success ml-5' %></td>
     </tr>
    <% end %>
    </table>
    </div>
  </div>
</div>