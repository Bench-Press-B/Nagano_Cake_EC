<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-2'>
     ジャンル検索欄
    </div>
    <div class='col-md-10'>
      <div class="form-inline">
        <h2>商品一覧</h2>
        <h5>（全x件）</h5>
      </div>
      <div class="form-inlne">
        <% @items.each do |item| %>
          <%= image_tag item.image, size: "300x150" %>
          <%= item.name %>
          <%= (item.non_taxed_price * 1.1).floor %>
        <% end %>
      </div>
      <%= paginate @items %>
    </div>
  </div>
</div>