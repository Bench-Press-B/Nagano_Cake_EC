<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
     <table class="table table-bordered">
       <thead class="text-center">
         <tr>
           <th>ジャンル検索</th>
         </tr>
       </thead>
       <tbody class="table-borderless">
         <% @genres.each do |genre| %>
           <tr>
             <td><%= genre.name %></td>
           </tr>
         <% end %>
       </tbody>
     </table>
    </div>
    <div class='col-md-9'>
      <div class="d-flex align-items-end mb-3">
        <h2><strong>商品一覧</strong></h2>
        <h5>（全<%= @item.count %>件）</h5>
      </div>
      <div class="d-flex flex-row flex-wrap">
        <% @items.each do |item| %>
          <div class="flex-column mb-5 mr-3">
            <div><%= image_tag item.get_image, size: "190x120" %></div>
            <div><%= link_to item.name, item_path(item) %></div>
            <div>¥<%= (item.non_taxed_price * 1.1).floor.to_s(:delimited) %></div>
          </div>
        <% end %>
        <div class="mx-auto mb-3">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>