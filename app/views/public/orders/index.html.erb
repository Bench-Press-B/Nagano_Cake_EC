<div class = "container">
  <div class ="row">
    <table class = "table table-bordered">
      <thead>
        <tr>
          <td>注文日</td>
          <td>配送先</td>
          <td>注文商品</td>
          <td>支払金額</td>
          <td>ステータス</td>
          <td>注文詳細</td>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td><%= order.address %></td>
          <td></td>
          <td><%= order.total_payment %></td>
          <td><%= order.status %></td>
          <td><%= link_to "表示する",about_path,class: "btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>